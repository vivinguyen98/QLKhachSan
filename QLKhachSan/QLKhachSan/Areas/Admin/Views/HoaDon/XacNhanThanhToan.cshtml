
@{
    ViewBag.Title = "XacNhanThanhToan";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Kết quả</li>
</ol>
@{
    if (ViewBag.result == "success")
    {
        <div class="alert alert-success" role="alert">
            <h2 style="color:#3c763d">Đã hoàn tất thanh toán.</h2>
        </div>
        <div class="alert alert-warning" role="alert"> Phòng được chuyển sang trạng thái trống!</div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">Có lỗi !<br /></div>
    }
    <a href="@Url.Action("ThanhToan","HoaDon",new { id = ViewBag.MAHD })"><i class="fa fa-arrow-left" aria-hidden="true"></i> Quay lại hóa đơn</a> <b> | </b>
    <a href='@Url.Action("Index","HoaDon")'><i class="fa fa-list-ul" aria-hidden="true"></i> Danh sách hóa đơn </a>
}

