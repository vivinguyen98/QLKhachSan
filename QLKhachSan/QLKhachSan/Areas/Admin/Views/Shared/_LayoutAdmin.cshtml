                        @{
                            QLKhachSan.Models.WEBSITEEntities db = new QLKhachSan.Models.WEBSITEEntities();
                            DateTime d = DateTime.Now.AddDays(1);
                            List<QLKhachSan.Models.HOADON> hd = db.HOADONs.Where(t => t.TINHTRANGHD == 1 && t.PHIEUDATPHONG.NGAYRA < d).OrderBy(t => t.PHIEUDATPHONG.NGAYRA).Take(5).OrderByDescending(t => t.PHIEUDATPHONG.NGAYRA).ToList();
                            List<QLKhachSan.Models.PHIEUDATPHONG> pdp = db.PHIEUDATPHONGs.Where(t => t.TINHTRANGPHIEU == 1).OrderByDescending(t => t.NGAYDAT).Take(5).ToList();
                            int i = 0, j = 0, k = 0, max = 7;
                            while (k < max && i < hd.Count && j < pdp.Count)
                            {
                                if (hd[i].PHIEUDATPHONG.NGAYRA.Value.AddDays(-1) > pdp[j].NGAYDAT)
                                {
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">
                                        <span class="text-danger">
                                            <strong>
                                                <i class="fa fa-sign-out fa-fw"></i>Trả phòng @hd[i].PHIEUDATPHONG.PHONG.SOPHONG
                                            </strong>
                                        </span>
                                        <span class="small float-right text-muted">@hd[i].PHIEUDATPHONG.NGAYRA.Value.AddDays(-1).ToShortDateString()</span>
                                        <div class="dropdown-message small">Thời gian trả phòng vào lúc @hd[i].PHIEUDATPHONG.NGAYRA</div>
                                    </a>
                                    i = i + 1;
                                }
                                else
                                {

                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">
                                        <span class="text-success">
                                            <strong>
                                                <i class="fa fa-plus-circle fa-fw"></i>Đặt phòng @pdp[j].PHONG.SOPHONG
                                            </strong>
                                        </span>
                                        <span class="small float-right text-muted"> @pdp[j].NGAYDAT.Value.ToShortDateString()</span>
                                        <div class="dropdown-message small">Phòng @pdp[j].PHONG.SOPHONG được đặt vào lúc @pdp[j].NGAYDAT</div>
                                    </a>
                                    j = j + 1;

                                }
                                k = k + 1;
                            }
                            for (int a = i; a < hd.Count; a++)
                            {
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">
                                    <span class="text-danger">
                                        <strong>
                                            <i class="fa fa-sign-out fa-fw"></i>Trả phòng @hd[a].PHIEUDATPHONG.PHONG.SOPHONG
                                        </strong>
                                    </span>
                                    <span class="small float-right text-muted">@hd[a].PHIEUDATPHONG.NGAYRA.Value.AddDays(-1).ToShortDateString()</span>
                                    <div class="dropdown-message small">Thời gian trả phòng vào lúc @hd[a].PHIEUDATPHONG.NGAYRA</div>
                                </a>

                                k = k + 1;
                                if (k >= max)
                                {
                                    break;
                                }
                            }
                            for (int a = j; a < pdp.Count; a++)
                            {

                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">
                                    <span class="text-success">
                                        <strong>
                                            <i class="fa fa-plus-circle fa-fw"></i>Đặt phòng @pdp[a].PHONG.SOPHONG
                                        </strong>
                                    </span>
                                    <span class="small float-right text-muted">@pdp[a].NGAYDAT.Value.ToShortDateString()</span>
                                    <div class="dropdown-message small">Phòng @pdp[a].PHONG.SOPHONG được đặt vào lúc @pdp[a].NGAYDAT</div>
                                </a>
                                k = k + 1;
                                if (k >= max)
                                {
                                    break;
                                }
                            }
                        }



