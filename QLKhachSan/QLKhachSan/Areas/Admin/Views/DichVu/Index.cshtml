@model IEnumerable<QLKhachSan.Models.DICHVU>
@{
    ViewBag.Title = "View";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index","Index")">Admin</a>
    </li>
    <li class="breadcrumb-item active">Danh sách dịch vụ</li>
</ol>
<p>
    @Html.ActionLink("Thêm dịch vụ", "Create")
</p>
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Danh sách dịch vụ
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover" id="dataTable" cellspacing="0">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            Tên dịch vụ
                        </th>
                        <th>
                            Giá
                        </th>
                        <th>
                            Tồn kho
                        </th>
                        <th>
                            Đơn vị
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@Html.DisplayFor(modelItem => item.ANH)" width="60px" />
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TENDV)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GIA)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TONKHO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DVT)
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MADV }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.MADV })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Cập nhật lần cuối lúc @DateTime.Now</div>
</div>



