@{
    ViewBag.Title = "Contact";
}
@*<header id="gtco-header" class="gtco-cover gtco-cover-sm" role="banner" style="background-image: url(/Content/Home/images/ks.jpg)">*@
<header id="gtco-header" class="gtco-cover gtco-cover-chinh g-header" role="banner" style="background-image: url(/Content/Home/images/ks.jpg)" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-center">

                <div class="row row-mt-15em">
                    <div class="col-md-12 mt-text animate-box" data-animate-effect="fadeInUp">
                        <span class="intro-text-small">Khách sạn đạt chuẩn 5 sao tại Việt Nam !</a></span>
                        <h1 class="cursive-font">Kính chào quý khách</h1>
                    </div>

                </div>

            </div>
        </div>
    </div>
</header>


<div class="gtco-section">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6 animate-box">
                    <h3>Liên lạc</h3>
                    @using (Html.BeginForm())
                    {
                      
                       
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="sr-only" for="name">Họ và tên</label>
                                    @*<input type="text" id="name" class="form-control" placeholder="Your firstname">*@
                                    @Html.TextBox("ho_ten", null, new { @class = "form-control", placeholder = "Họ tên" })
                                </div>

                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label class="sr-only" for="email">Email</label>
                                    @*<input type="text" id="email" class="form-control" placeholder="Your email address">*@
                                    @Html.TextBox("mail", null, new { @class = "form-control", placeholder = "Email của bạn" })
                                </div>
                            </div>
                       
                        <div class="row form-group">
                            <div class="col-md-12">
                                <label class="sr-only" for="message">Nội dung</label>
                                @*<textarea name="message" id="message" cols="30" rows="10" class="form-control" placeholder="Write us something"></textarea>*@
                                @Html.TextArea("noi_dung", null, new { @class = "form-control", placeholder = "Nội dung khách hàng", cols = "30", rows = "10" })
                            </div>
                        </div>
                        <div class="form-group">
                            <input onclick="return checkSMS()" type="submit" value="Gửi" class="btn btn-primary">
                        </div>

                    }
                </div>
                <div class="col-md-5 col-md-push-1 animate-box">

                    <div class="gtco-contact-info">
                        <h3>Thông tin liên lạc</h3>
                        <ul>
                            <li class="address">140 Lê Trọng Tấn <br> Tây Thạnh, Tân Phú, Hồ Chí Minh</li>
                            <li class="phone"><a href="tel://0819192955">+819192955</a></li>
                            <li class="email"><a href="mailto:info@yoursite.com">doanhvo@gmail.com</a></li>
                            <li class="url"><a href="https://robins-villa-vn.book.direct/vi-vn" target="_blank">https://robins-villa-vn.book.direct/vi-vn</a></li>
                        </ul>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function checkSMS() {
        var ht = $('#ho_ten');
        var mail = $('#mail');
        if (ht != null)
            if (ht.val() == "") {
                alert('Phải nhập họ tên !');
                return false;
            }
        if (mail != null)
            if (mail.val() == "") {
                alert('Phải nhập email !');
                return false;
            }
        var nd = $('#noi_dung').val();
        if (nd.length < 10) {
            alert('Nội dung quá ngắn !');
            return false;
        } else if (nd.length >= 500) {
            alert('Nội dung quá dài !');
            return false;
        }
        return true;
    }
</script>