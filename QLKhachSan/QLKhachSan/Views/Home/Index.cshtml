}
<header id="gtco-header" class="gtco-cover gtco-cover-chinh" role="banner" style="background-image: url(/Content/Home/images/ks.jpg)" data-stellar-background-ratio="0.5">
    @*<div class="overlay"></div>*@
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0 text-left">
                <div class="row row-mt-15em">
                    <div class="col-md-7 mt-text animate-box" data-animate-effect="fadeInUp">
                        <span class="intro-text-small"><a>Khách sạn đạt chuẩn 5 sao tại Việt Nam !</a></span>
                        <h1 class="cursive-font primary-color" >Kính chào quý khách hàng</h1>
                    </div>
                    @*<div class="row row-mt-15em">
                        <div class="col-md-12 mt-text animate-box" data-animate-effect="fadeInUp">
                            <span class="intro-text-small">Khách sạn đạt chuẩn 5 sao tại Việt Nam !</a></span>
                            <h1 class="cursive-font">Kính chào quý khách</h1>
                        </div>*@

                    <div class="col-md-4 col-md-push-1 animate-box" data-animate-effect="fadeInRight">
                        <div class="form-wrap">
                            <div class="tab">
                                <div class="tab-content">
                                    <div class="tab-content-inner active" data-content="signup">
                                        <h3 class="cursive-font">Đặt phòng</h3>
                                        @using (Html.BeginForm("FindRoom", "Home"))
                                        {
                                            <div class="row form-group ">
                                                <div class="col-md-12">
                                                    <label for="activities">Loại phòng</label>
                                                    <select name="#" id="activities" class="form-control" >
                                                        <option value="">Tất cả </option>
                                                        <option value="">Phòng đơn</option>
                                                        <option value="">Phòng đôi</option>
                                                        <option value="">Phòng VIP</option>
                                                        <option value="">Phòng 4 người</option>
                                                    </select>
                                                </div>
                                            </div>
                                                <div class="row form-group">
                                                    <div class="col-md-12">
                                                        <label for="date_start">Ngày đặt phòng</label>
                                                        @Html.TextBox("datestart", null, new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="row form-group">
                                                    <div class="col-md-12">
                                                        <label for="date_end">Ngày trả phòng</label>
                                                        @Html.TextBox("dateend", null, new { @class = "form-control" })
                                                    </div>
                                                </div>

                                                <div class="row form-group ">
                                                    <div class="col-md-12">
                                                        <input type="submit" onclick="return checkday()" class="btn btn-primary btn-block" value="Đặt phòng ngay ">
                                                    </div>
                                                </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
